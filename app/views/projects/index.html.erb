<% @page_title = _('Projects') -%>
<% slim_page -%>
<% auto_discover_feed -%>
<%= page_title %>
 
<% if @projects.blank? -%>
  <h2><%=_ 'No projects available' -%></h2>
<% else -%>

  <h2><%=_ 'My Projects' -%></h2>
  <table width="100%">
    <tr>
      <td width="75%">
	<table>
	  <% pro = relevant_projects(User.current) -%>
	  <% pro.first((pro.length.to_f)/2 + 0.5).each do |project| -%>
	      <%= render :partial=>"project", :locals=>{:project=> project} -%>          
	  <% end -%>
	</table>
      </td>
      <td></td>
      <td width="75%">
	<table>
	   <% pro = relevant_projects(User.current) -%>
	   <% pro.last(pro.length/2).each do |project| -%>
	      <%= render :partial=>"project", :locals=>{:project=> project} -%>          
	   <% end -%>
	</table>
      </td>
      </tr>
  </table>

  <h2><%=_ 'Other Projects' -%></h2>
  <table width="100%">
    <tr>
      <td width="75%">
	<table>
	  <% pro = irrelevant_projects(User.current) -%>
	  <% pro.first((pro.length.to_f)/2 + 0.5).each do |project| -%>
	      <%= render :partial=>"project", :locals=>{:project=> project} -%>          
	  <% end -%>
	</table>
      </td>
      <td></td>
      <td width="75%">
	<table>
	   <% pro = irrelevant_projects(User.current) -%>
	   <% pro.last(pro.length/2).each do |project| -%>
	      <%= render :partial=>"project", :locals=>{:project=> project} -%>          
	   <% end -%>
	</table>
      </td>
      </tr>
  </table>

<% end -%>
